{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug NestJS",
			"args": [
				"${workspaceFolder}/src/main.ts"
			],
			"runtimeArgs": [
				"--nolazy",
				"-r",
				"ts-node/register"
			],
			"sourceMaps": true,
			"env": {
				"TS_NODE_PROJECT": "tsconfig.json"
			},
			"cwd": "${workspaceFolder}"
		}
	]
}